
<section>
  <p><%= data.site_info.statement %></p>
</section>

<section class="contact_info">
  <%= image_tag(data.site_info.contact.image.url, :alt => data.site_info.contact.image.title) %>
  <div class="sidebar">
    <h3>Contact Information</h3>
    <h4>Email</h4>
    <p><%= data.site_info.contact.email%></p>
    <h4>Telephone</h4>
    <p><%= data.site_info.contact.phone%></p>
    <% if data.site_info.contact.address %>
      <h4>Address</h4>
      <p><%= data.site_info.contact.address%> </p>
    <% end %>
    <% if data.site_info.contact.instagram %>
    <h4>Instagram</h4>
    <p><%= link_to(data.site_info.contact.instagram, "https://www.instagram.com/#{data.site_info.contact.instagram}/") %> </p>
    <% end %>
    <% if data.site_info.contact.linkedin %>
    <h4>LinkedIn</h4>
    <p><%= link_to(data.site_info.contact.linkedin, "https://www.linkedin.com/in/#{data.site_info.contact.instagram}/") %> </p>
    <% end %>
    
  </div>
</section>

<section>
  <h3>Biography</h3>
  <table class="timeline" cellpadding="4" cellspacing="4">
  <% data.site_info.timeline.each do |year, item| %>
  <tr>
  <th><%= year %></th><td><%= item %></td>
  </tr>
  <% end %>
  </table>
</section>